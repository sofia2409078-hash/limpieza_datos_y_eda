estados = ["Colima", "Jalisco", "Chihuahua"]

df_filtrado = df_hd[df_hd["entidad"].isin(estados)]

# Agrupamos por entidad y fecha
serie = df_filtrado.groupby(["fecha", "entidad"])["cantidad"].sum().reset_index()

# Graficamos
plt.figure(figsize=(12,6))

for est in estados:
    datos = serie[serie["entidad"] == est]
    plt.plot(datos["fecha"], datos["cantidad"], label=est)

plt.xticks(rotation=45)
plt.title("Homicidios dolosos 2015–2019")
plt.xlabel("Fecha")
plt.ylabel("Casos")
plt.legend()
plt.tight_layout()
plt.show()

